<div class="content-wrapper">

 <div class="col-md-4 col-md-offset-4">
	<h1>Sign Up</h1>
	{{#if hasErrors}}
		<div class="alert alert-danger">
			{{# each messages }}
			<p>{{this}}</p>
			{{/each}}
		</div>


	{{/if}}
     {{#if success}}
         <div class="success" style="background-color: #00a157; color: white; border-color: #00a157; border-radius: 3px;padding:15px; margin-bottom: 20px;">
             <p>{{success}}</p>
         </div><br>
     {{/if}}
	<form action="/admin/signup" method="post">
        <div class="form-group">
            <label for="name">Full name</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Full name">
        </div>
		<div class="form-group">
			<label for="email">Email</label>
			<input type="text" id="email" name="email" class="form-control" placeholder="Email">
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input type="password" id="password" name="password" class="form-control" placeholder="Password">
		</div>
        <div class="form-group">
            <label for="passwordretype">Password retype</label>
            <input type="password" id="passwordretype" name="passwordretype" class="form-control" placeholder="Retype Password">
        </div>
		<input type="hidden" name="_csrf" value="{{ csrfToken }}">
		<button type="submit" class="btn btn-primary">Sign Up</button>
	</form>
 </div>

</div>