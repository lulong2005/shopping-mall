<div class="content-wrapper">

    <div class="col-md-6 col-md-offset-3">

        <h1 style="text-align: center;">Reset password</h1><br>

        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages }}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{else}}
            {{#if success}}
                <div class="success" style="background-color: #00a157; color: white; border-color: #00a157; border-radius: 3px;padding:15px; margin-bottom: 20px;">
                    <p>{{success}}</p>
                </div><br>
            {{/if}}
        {{/if}}
        <form class="form-horizontal"  method="post">
            <div class="form-group">
                <label style = "font-size: 14px;" class="control-label col-sm-4" for="password">New password</label>
                <div class="col-sm-6">
                    <input type="password" id="password" name="password" class="form-control" placeholder="New Password">
                </div>
            </div>
            <div class="form-group">
                <label style = "font-size: 14px;" class="control-label col-sm-4" for="passwordretype">Password retype</label>
                <div class="col-sm-6">
                    <input type="password" id="passwordretype" name="passwordretype" class="form-control" placeholder="Retype Password">
                </div>
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <div class="col-md-4 col-md-offset-4">
                <button type="submit" class="btn btn-primary">Reset Password</button>
            </div>
        </form>
    </div>
</div>