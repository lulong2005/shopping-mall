   };

   {{/if}}
   {{#if range}}
   var data=[];
   var p;
   {{#each range_statistic}}
       p={
         label: "{{time}}",
         y:{{total}}
       };
       data.push(p);
   {{/each}}
   window.onload = function () {
       var chart = new CanvasJS.Chart("chartstatistictime",
               {
                   animationEnabled: true,
                   theme: "theme2",
                   //exportEnabled: true,
                   title: {
                       text: "Sale figure graphics ({{range}})"
                   },
                   data: [
                       {
                           type: "line", //change type to bar, line, area, pie, etc
                           dataPoints: data
                       }
                   ]
               }
       );
       chart.render();
   };

   {{/if}}

</script>