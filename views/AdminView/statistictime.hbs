           {{/if}}
       window.onload = function () {
           var chart = new CanvasJS.Chart("chartstatistictime",
                   {
                       animationEnabled: true,
                       theme: "theme2",
                       //exportEnabled: true,
                       title: {
                           text: "Sale figure graphics (Quater: {{quater}})"
                       },
                       data: [
                           {
                               type: "line", //change type to bar, line, area, pie, etc
                               dataPoints: data
                           }
                       ]
                   }
           );
           chart.render();
       };
   {{/if}}
   {{#if month}}
   var data=[];
   var p;
       {{#each month_statistic}}
         p = {
          label: "{{time}}",
          y: {{total}}
        };
        data.push(p);
        {{/each}}
   window.onload = function () {
       var chart = new CanvasJS.Chart("chartstatistictime",
               {
                   animationEnabled: true,
                   theme: "theme2",
                   //exportEnabled: true,
                   title:{
                       text: "Sale figure graphics (Month {{month}})"
                   },
                   data: [
                       {
                           type: "line", //change type to bar, line, area, pie, etc
                           dataPoints: data
                       }
                   ]
               });

