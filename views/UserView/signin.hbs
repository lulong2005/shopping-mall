<div class="span9">
	{{#if hasErrors}}
		<div class="alert alert-danger">
			{{# each messages }}
			<p>{{this}}</p>
			{{/each}}
		</div>
	{{/if}}
	<div class="well">
	<form class="form-horizontal" action="/user/signin" method="post">
		<h3>Sign In</h3>
		
		<div class="control-group">
		<label class="control-label" for="inputEmail">Email <sup>*</sup></label>
		<div class="controls">
		  <input type="text" name="email" placeholder="Email">
		</div>
	  </div>	  
		<div class="control-group">
		<label class="control-label">Password <sup>*</sup></label>
		<div class="controls">
		  <input type="password" name="password" placeholder="Password">
		</div>
	  </div>
	  
		<div class="controls">
		  <p><a href="/user/forgetpassword">Forget Password?</a></p>
		</div>
	  
		<input type="hidden" name="_csrf" value="{{ csrfToken }}">
	<div class="control-group">
		<div class="controls">
		 <input type="submit" name="submitAccount" value="Sign In" class="exclusive shopBtn">
		</div>
	</div>
	<div class="controls">
		  <p><a href="/user/signup">Create a new account</a></p>
		</div>
	</form>
</div>
</div>