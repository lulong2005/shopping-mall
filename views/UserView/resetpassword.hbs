<div class="span9">
	{{#if hasErrors}}
		<div class="alert alert-danger">
			{{# each messages }}
			<p>{{this}}</p>
			{{/each}}
		</div>


	{{/if}}
	<div class="well">
	<form class="form-horizontal" method="post">
		<h3>Reset Password</h3>
		  
		<div class="control-group">
		<label class="control-label">Password <sup>*</sup></label>
		<div class="controls">
		  <input type="password" name="password" placeholder="Password">
		</div>
	  </div>
	  
	  <div class="control-group">
		<label class="control-label">Password Retype<sup>*</sup></label>
		<div class="controls">
		  <input type="password" name="passwordretype" placeholder="Password Retype">
		</div>
	  </div>
	  
		<input type="hidden" name="_csrf" value="{{ csrfToken }}">
	<div class="control-group">
		<div class="controls">
		 <input type="submit" name="submitAccount" value="Reset Password" class="exclusive shopBtn">
		</div>
	</div>
	</form>
</div>
</div>